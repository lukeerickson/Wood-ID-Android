<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/wood_specimen_image"
                android:layout_width="80dp"
                android:layout_height="80dp"></ImageView>
            <TextView
                android:id="@+id/class_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specimen"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/wood_specimen_image"/>
            <TextView
                android:id="@+id/filename"
                android:text="image.png"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/class_label"
                android:layout_toRightOf="@id/wood_specimen_image"
                />
            <TextView
                android:id="@+id/score"
                android:layout_marginTop="10dp"
                android:layout_below="@id/class_label"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/wood_specimen_image"
                android:text="100.0"
                android:textSize="10sp"
                android:layout_width="wrap_content"></TextView>
            <ImageButton
                android:id="@+id/deleteLogItem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_delete_black_24dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>