<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstRunActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:lineSpacingExtra="2dp"
        android:padding="10dp"
        android:text="Welcome! we will need to calibrate this device to work with the XyloPhone"
        android:textColor="@color/un_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="30dp" />

    <Button
        android:id="@+id/button_start_calibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="startCalibration"
        android:text="Start Calibration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text='Please attach the XyloPhone to your mobile device and tap on "Start Calibration" to begin'
        android:textSize="16sp"
        android:textStyle="bold"
        app:lineHeight="25dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="113dp"
        tools:text='Please attach the XyloPhone to your mobile device and tap on "Start Calibration" to begin' />
</androidx.constraintlayout.widget.ConstraintLayout>